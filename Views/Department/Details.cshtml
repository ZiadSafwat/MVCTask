@model mvcLab.Models.Department

@{
    ViewData["Title"] = "Department Details";
}

<h2>@Model.Name</h2>
<dl class="row">
    <dt class="col-sm-2">Manager</dt>
    <dd class="col-sm-10">@Model.Manager</dd>
    <dt class="col-sm-2">Location</dt>
    <dd class="col-sm-10">@Model.Location</dd>
</dl>

<h4>Instructors</h4>
<ul>
@foreach(var i in Model.Instructors)
{
    <li>@i.Name (@i.Email)</li>
}
</ul>

<h4>Students</h4>
<ul>
@foreach(var s in Model.Students)
{
    <li>@s.Name</li>
}
</ul>

<a asp-action="Index" class="btn btn-secondary">Back</a>
