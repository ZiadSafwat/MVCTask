@model List<Student>

<div class="container mt-5">
    <div class="row mb-3">
        <div class="col-12">
            <h1 class="text-center text-primary">Student List</h1>
        </div>
        <div class="col-12 mb-3">
            <a asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Add New Student
            </a>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover table-bordered align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Name</th>
                    <th>Age</th>
                    <th>Gender</th>
                    <th>Department</th>
                    <th>Courses Enrolled</th>
                    <th>Average Grade</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody class="table-group-divider">
                @if (Model.Any())
                {
                    @foreach (var stud in Model)
                    {
                        var averageGrade = stud.StudCourses.Any() ? stud.StudCourses.Average(sc => sc.Grade) : 0;
                        var gradeColor = stud.GetGradeColor(averageGrade);
                        var gradeText = stud.GetGradeText(averageGrade);
                        
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    @if (!string.IsNullOrEmpty(stud.Image))
                                    {
                                        <img src="@stud.Image" alt="Avatar" class="rounded-circle me-2 shadow-sm" style="width: 35px; height: 35px; object-fit: cover;">
                                    }
                                    else
                                    {
                                        <i class="bi bi-person-circle me-2 text-secondary fs-5"></i>
                                    }
                                    <strong>@stud.Name</strong>
                                </div>
                            </td>

                            <td class="text-center">@stud.Age</td>

                            <td>@stud.Gender</td>

                            <td>@stud.Department.Name</td>

                            <td>
                                <div class="d-flex flex-wrap gap-2">
                                    @foreach (var course in stud.StudCourses.Take(3))
                                    {
                                        var courseGradeColor = stud.GetGradeColor(course.Grade);
                                        <span class="badge bg-@courseGradeColor text-dark fw-normal" 
                                              title="Grade: @course.Grade - @stud.GetGradeText(course.Grade)">
                                            @course.Course.Name
                                        </span>
                                    }
                                    @if (stud.StudCourses.Count > 3)
                                    {
                                        <span class="badge bg-secondary text-white opacity-75" title="@(stud.StudCourses.Count - 3) more courses">
                                            +@(stud.StudCourses.Count - 3)
                                        </span>
                                    }
                                </div>
                            </td>

                            <td class="text-center">
                                @if (stud.StudCourses.Any())
                                {
                                    <span class="badge bg-@gradeColor text-dark fs-6" title="Average Grade: @averageGrade.ToString("F1")">
                                        @gradeText (@averageGrade.ToString("F1"))
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">No Grades</span>
                                }
                            </td>

                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="Details" asp-controller="Student" asp-route-id="@stud.SSN" 
                                       class="btn btn-info btn-sm">
                                        <i class="bi bi-eye"></i> Details
                                    </a>
                                    <a asp-action="Edit" asp-controller="Student" asp-route-id="@stud.SSN" 
                                       class="btn btn-warning btn-sm">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                    <a asp-action="Delete" asp-controller="Student" asp-route-id="@stud.SSN" 
                                       class="btn btn-danger btn-sm">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7" class="text-center text-danger py-4">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i> No student records are currently available.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>