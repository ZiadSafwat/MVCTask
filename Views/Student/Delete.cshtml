@model Student

@{
    ViewData["Title"] = "Delete Student";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-danger text-white p-4">
                    <h2 class="mb-0"><i class="bi bi-exclamation-triangle me-2"></i>Delete Student</h2>
                </div>
                
                <div class="card-body p-4">
                    <h4 class="text-danger">Are you sure you want to delete this student?</h4>
                    
                    <div class="alert alert-danger">
                        <strong><i class="bi bi-exclamation-octagon-fill me-2"></i>Warning:</strong> 
                        This will permanently delete the student and all their course enrollments. This action cannot be undone!
                    </div>

                    <div class="student-info mt-4">
                        <h5>Student Information:</h5>
                        <dl class="row">
                            <dt class="col-sm-3">Name:</dt>
                            <dd class="col-sm-9">@Model.Name</dd>

                            <dt class="col-sm-3">SSN:</dt>
                            <dd class="col-sm-9">@Model.SSN</dd>

                            <dt class="col-sm-3">Age:</dt>
                            <dd class="col-sm-9">@Model.Age</dd>

                            <dt class="col-sm-3">Gender:</dt>
                            <dd class="col-sm-9">@Model.Gender</dd>

                            <dt class="col-sm-3">Department:</dt>
                            <dd class="col-sm-9">@Model.Department.Name</dd>

                            <dt class="col-sm-3">Courses Enrolled:</dt>
                            <dd class="col-sm-9">
                                @if (Model.StudCourses.Any())
                                {
                                    @foreach (var course in Model.StudCourses)
                                    {
                                        <span class="badge bg-info text-dark me-1 mb-1">@course.Course.Name</span>
                                    }
                                    <div class="mt-2 text-warning">
                                        <i class="bi bi-info-circle me-1"></i>
                                        <strong>@Model.StudCourses.Count courses will also be deleted</strong>
                                    </div>
                                }
                                else
                                {
                                    <span class="text-muted">No courses enrolled</span>
                                }
                            </dd>
                        </dl>
                    </div>

                    <form asp-action="Delete" class="mt-4">
                        <input type="hidden" asp-for="SSN" />
                        
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left-short"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Confirm Delete
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>