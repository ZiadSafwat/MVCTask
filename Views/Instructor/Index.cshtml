@model IEnumerable<mvcLab.Models.Instructor>

@{
    ViewData["Title"] = "Instructors";
}

<h2>Instructors</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Instructor</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Department</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach(var i in Model)
    {
        <tr>
            <td>@i.Name</td>
            <td>@i.Email</td>
            <td>@i.Department?.Name</td>
            <td>
                <a asp-action="Details" asp-route-id="@i.Id">Details</a> |
                <a asp-action="Edit" asp-route-id="@i.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@i.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
