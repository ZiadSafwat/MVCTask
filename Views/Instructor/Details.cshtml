@model mvcLab.Models.Instructor

@{
    ViewData["Title"] = "Instructor Details";
}

<h2>@Model.Name</h2>
<dl class="row">
    <dt class="col-sm-2">Email</dt>
    <dd class="col-sm-10">@Model.Email</dd>
    <dt class="col-sm-2">Department</dt>
    <dd class="col-sm-10">@Model.Department?.Name</dd>
    <dt class="col-sm-2">Salary</dt>
    <dd class="col-sm-10">@Model.Salary</dd>
</dl>

<h4>Courses</h4>
<ul>
@foreach(var ic in Model.InstructorCourses)
{
    <li>@ic.Course?.Name</li>
}
</ul>

<a asp-action="Index" class="btn btn-secondary">Back</a>
