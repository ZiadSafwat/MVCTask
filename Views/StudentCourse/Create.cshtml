@model mvcLab.Models.StudCourse

@{
    ViewData["Title"] = "Add Enrollment";
}

<h2>Add Enrollment</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Student</label>
        <select asp-for="StudId" asp-items="@(new SelectList(ViewBag.Students, "Value", "Text"))" class="form-control"></select>
    </div>
    <div class="form-group">
        <label>Course</label>
        <select asp-for="CourseId" asp-items="@(new SelectList(ViewBag.Courses, "Value", "Text"))" class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="Grade"></label>
        <input asp-for="Grade" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Add</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>
